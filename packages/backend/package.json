{
  "name": "@manna/backend",
  "version": "1.0.0",
  "description": "Manna Financial Platform - Backend (FastAPI)",
  "private": true,
  "scripts": {
    "dev": "python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python -m uvicorn src.main:app --host 0.0.0.0 --port 8000",
    "lint": "echo 'Python linting handled by pre-commit hooks'",
    "type-check": "python -m mypy src/",
    "test": "python -m pytest",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true"
  },
  "engines": {
    "python": ">=3.11"
  }
}
