{
  "name": "@manna/frontend",
  "version": "1.0.0",
  "description": "Manna Financial Platform - Frontend (Next.js)",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf .next node_modules",
    "test": "echo \"Tests will be added in future phases\"",
    "test:e2e": "echo \"E2E tests will be added in future phases\"",
    "analyze": "ANALYZE=true next build",
    "dev:turbo": "next dev --turbo",
    "docker:build": "docker build -f Dockerfile.prod -t manna-frontend:latest .",
    "docker:run": "docker run -p 3000:3000 manna-frontend:latest",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "precommit": "npm run lint && npm run type-check && npm run format:check",
    "validate": "npm run type-check && npm run lint && npm run build"
  },
  "dependencies": {
    "@manna/shared": "file:../shared",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "@tanstack/react-query": "^5.51.0",
    "@tanstack/react-table": "^8.20.0",
    "axios": "^1.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "react-hook-form": "^7.52.0",
    "recharts": "^2.12.0",
    "tailwind-merge": "^2.4.0",
    "lucide-react": "^0.417.0",
    "zustand": "^4.5.0",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.0",
    "js-cookie": "^3.0.5",
    "class-variance-authority": "^0.7.0",
    "next-themes": "^0.3.0",
    "react-plaid-link": "^3.5.0",
    "@tanstack/react-query-devtools": "^5.51.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/js-cookie": "^3.0.6",
    "typescript": "^5.5.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "critters": "^0.0.24"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
