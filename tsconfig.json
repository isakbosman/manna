{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@manna/shared": ["./packages/shared/src"],
      "@manna/shared/*": ["./packages/shared/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/**/*.ts",
    "packages/*/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "**/.next"]
}
